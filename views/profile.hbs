{{#with user}}
  <h1>Profile of {{username}}</h1>
  <form action="/users/{{id}}" method="post">
    <label for="collectionName">Name of your collection:</label>
    <input name="collectionName" value="{{collectionName}}"/>
        <input name="collectionDescription" value="{{collectionDescription}}"/>
    <button type="submit">Change</button>
  </form>
{{/with}}