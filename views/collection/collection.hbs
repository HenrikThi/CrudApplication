{{> header}}

{{#with user}}
  <section class="text-gray-600 body-font">
    <div class="container px-5 py-24 mx-auto">
      <div class="flex flex-col text-center w-full mb-20">
        <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Gallery <span class="font-bold">"{{collectionName}}"</span></h1>
        <h2  class="sm:text-2xl text-pink-500 text-1xl font-medium title-font mb-4"> by {{username}}</h2>
        <p class="lg:w-2/3 mx-auto leading-relaxed text-base">{{collectionDescription}}</p>
      </div>
      <div  class="flex flex-wrap -m-4">
        {{#each nfts}}
         <div  style="aspect-ratio: 1/1;" class="lg:w-1/3 sm:w-1/2 p-4">
          <div class="flex relative">
            <img alt="gallery" class="absolute inset-0 w-full h-full object-cover object-center"src="{{imageUrl}}">
            <div style="aspect-ratio: 1/1;" class=" flex flex-col justify-between px-8 py-10 relative z-10 w-full border-4 border-gray-200 bg-white opacity-0 hover:opacity-100">
              <div> 
                <h2 class="tracking-widest text-sm title-font font-medium text-pink-500 mb-1">Sold For {{lastSale.priceEth}}ETH (${{lastSale.priceUsd}})</h2>
                <h1 class="title-font text-lg font-medium text-gray-900 mb-3">{{name}}</h1>
                <p class="leading-relaxed overflow-y-auto overflow-x-hidden max-h-40 no-scroll-bar">{{collectionDescription}}</p>
              </div>
              <div class="flex justify-center m-1">
                <form action="/nfts/{{_id}}/delete" method="POST">
                  <a href="{{collectionUrl}}" target="_blank" class="inline-flex text-white bg-pink-500 border-0 py-2 px-6 focus:outline-none hover:bg-pink-600 rounded">Visit Project</a>
                  {{#if ../../isOwner}}
                    <button type="submit" class="inline-flex text-gray bg-gray-100 focus:outline-none hover:bg-gray-200 border-0 py-2 px-6  rounded">Remove</button>
                  {{/if}}
                </form>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>
{{/with}}
